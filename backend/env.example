# ========================================
# CONFIGURAÇÕES DO SISTEMA MULTIVUS
# ========================================

# ========================================
# CONFIGURAÇÕES BÁSICAS
# ========================================
NODE_ENV=development
PORT=8080
FRONTEND_URL=http://localhost:3000

# ========================================
# BANCO DE DADOS
# ========================================
DB_HOST=localhost
DB_USER=root
DB_PASS=
DB_NAME=multivus
DB_PORT=3306
DB_DIALECT=mysql

# ========================================
# JWT E AUTENTICAÇÃO
# ========================================
JWT_SECRET=sua_chave_secreta_aqui
JWT_EXPIRES_IN=7d

# ========================================
# CACHE E PERFORMANCE
# ========================================
# Cache TTL (em segundos)
CACHE_TTL_MESSAGES=300
CACHE_TTL_CONTACTS=600
CACHE_TTL_TICKETS=120
CACHE_TTL_CONFIG=1800
CACHE_TTL_SESSIONS=3600

# Limites de cache
CACHE_MAX_KEYS_MESSAGES=10000
CACHE_MAX_KEYS_CONTACTS=5000
CACHE_MAX_KEYS_TICKETS=2000
CACHE_MAX_KEYS_CONFIG=1000
CACHE_MAX_KEYS_SESSIONS=100

# Performance
MAX_OLD_SPACE_SIZE=1024
SLOW_OPERATION_THRESHOLD=1000
MAX_METRICS_STORED=1000

# ========================================
# SOCKET.IO
# ========================================
SOCKET_PING_TIMEOUT=60000
SOCKET_PING_INTERVAL=25000
SOCKET_CONNECT_TIMEOUT=45000
SOCKET_MAX_HTTP_BUFFER_SIZE=1000000
SOCKET_CLEANUP_INTERVAL=300000

# ========================================
# RETRY SYSTEM
# ========================================
RETRY_MAX_ATTEMPTS=3
RETRY_DELAY=1000
RETRY_BACKOFF_FACTOR=2

# ========================================
# WHATSAPP
# ========================================
WHATSAPP_SESSION_PATH=./sessions
WHATSAPP_QR_CODE_PATH=./public/qrcode
WHATSAPP_MAX_RETRIES=3
WHATSAPP_RETRY_DELAY=5000

# ========================================
# UPLOAD E ARQUIVOS
# ========================================
UPLOAD_PATH=./public/uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf,text/plain,audio/mp3,audio/wav,video/mp4

# ========================================
# EMAIL
# ========================================
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USER=seu_email@gmail.com
MAIL_PASS=sua_senha_de_app
MAIL_FROM=seu_email@gmail.com

# ========================================
# REDIS (OPCIONAL - PARA CACHE AVANÇADO)
# ========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ========================================
# LOGS
# ========================================
LOG_LEVEL=info
LOG_FILE_PATH=./logs
LOG_MAX_SIZE=10485760
LOG_MAX_FILES=5

# ========================================
# MONITORAMENTO
# ========================================
ENABLE_PERFORMANCE_MONITORING=true
PERFORMANCE_REPORT_INTERVAL=3600000
ENABLE_HEALTH_CHECK=true
HEALTH_CHECK_INTERVAL=300000

# ========================================
# SEGURANÇA
# ========================================
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100
ENABLE_HTTPS=false
SSL_KEY_PATH=
SSL_CERT_PATH=

# ========================================
# INTEGRAÇÕES
# ========================================
# Webhook
WEBHOOK_URL=
WEBHOOK_SECRET=

# API Externa
EXTERNAL_API_URL=
EXTERNAL_API_KEY=

# ========================================
# DESENVOLVIMENTO
# ========================================
DEBUG=false
ENABLE_SWAGGER=true
ENABLE_GRAPHIQL=false

# ========================================
# PRODUÇÃO
# ========================================
# Descomente para produção
# NODE_ENV=production
# ENABLE_HTTPS=true
# ENABLE_SWAGGER=false
# ENABLE_GRAPHIQL=false 